{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npx tsx watch ./src/index.ts",
    "build": "rm -rf dist && mkdir dist && npx tsc",
    "lint": "npx eslint ./src",
    "format": "npx prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "npx prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "jest",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest"
  },
  "engines": {
    "node": ">=20.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@eslint/json": "^0.14.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.0",
    "eslint": "^9.25.1",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "zod": "^4.3.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
